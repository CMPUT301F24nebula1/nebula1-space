<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"

    tools:context=".MainActivity">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/options"
        android:layout_width="279dp"
        android:layout_height="151dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        app:chipSpacing="0dp"
        app:chipSpacingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.chip.Chip
            android:id="@+id/selectedAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_purle"
            android:fontFamily="monospace"
            android:text="@string/admin"
            android:textColor="@android:color/black"
            app:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/selectedOrganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/light_grey"
            android:text="Organizer"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/selectedEntrant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/light_grey"
            android:text="Entrant"
            />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/profileButton"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:text="Manage Profile"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/eventButton"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:text="Manage Events"
        app:layout_constraintBottom_toTopOf="@+id/profileButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options"
        />

    <Button
        android:id="@+id/imageButton"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:text="@string/manage_images"
        app:layout_constraintBottom_toTopOf="@+id/qrButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qrButton"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginBottom="228dp"
        android:text="Manage QR codes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>