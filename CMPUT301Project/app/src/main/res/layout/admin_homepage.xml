<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text='Home'
            android:background="#FDE0F3"
            app:titleCentered="true"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- "Manage Profiles" Button -->
    <Button
        android:id="@+id/manageProfilesButton"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginBottom="412dp"
        android:backgroundTint="#73673AB7"
        android:text="Manage Profiles"
        android:textColor="@android:color/white"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_profile"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- "Manage Events" Button -->

    <Button
        android:id="@+id/manageEventsButton"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#73673AB7"
        android:text="Manage Events"
        android:textColor="@android:color/white"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_list"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageProfilesButton"
        app:layout_constraintVertical_bias="0.0" />

    <!-- "Manage Images" Button -->
    <Button
        android:id="@+id/manageImagesButton"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#73673AB7"
        android:text="Manage Images"
        android:textColor="@color/white"
        app:cornerRadius="24dp"
        app:icon="@drawable/icon_image"
        app:iconSize="24dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageEventsButton"
        app:layout_constraintVertical_bias="0.0" />

    <!-- "Manage QR code" Button -->

    <Button
        android:id="@+id/manageQrButton"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#73673AB7"
        android:text="Manage QR"
        android:textColor="@android:color/white"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_edit"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageImagesButton"
        app:layout_constraintVertical_bias="0.0" />

    <!-- "Manage facilities" Button -->

    <Button
        android:id="@+id/manageFacilitiesButton"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#73673AB7"
        android:text="Manage Facilities"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_list"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageQrButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>