<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:checkedButton="@id/btn_entrant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/organizer_view_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer"
            android:textColor="@color/btn_text_selector"
            android:textSize="12dp"
            app:backgroundTint="@color/btn_background_selector"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="@color/btn_text_selector"
            app:shapeAppearanceOverlay="@style/LeftRoundedButtonShape" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_entrant"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrant"
            android:textColor="@color/btn_text_selector"
            android:textSize="12dp"
            app:backgroundTint="@color/btn_background_selector"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="@color/btn_text_selector"
            app:shapeAppearanceOverlay="@style/RightRoundedButtonShape" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_button"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_profile"
            app:iconSize="36dp"
            app:iconTint="@android:color/black" />

        <TextView
            android:id="@+id/badge_text"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/badge_background"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/scan_qr_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleGroup"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/scan_qr_button"
            android:layout_width="140dp"
            android:layout_height="113dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_qr_scan"
            app:tint="@android:color/black" />

        <TextView
            android:id="@+id/scan_qr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Scan QR Code"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#78673AB7"
        android:drawableLeft="@drawable/ic_list"
        android:drawablePadding="8dp"
        android:text="My Classes"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_layout"/>


</androidx.constraintlayout.widget.ConstraintLayout>


