<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"
    >

    <!-- QR Code Button -->
    <Button
        android:id="@+id/scan_qr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#673AB7"
        android:drawableTop="@drawable/ic_qr_code"
        android:drawablePadding="8dp"
        android:text="Scan QR Code"
        android:textColor="@android:color/white"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Button 1: Lottery and Classes -->
    <Button
        android:id="@+id/lottery_and_classes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery and Classes"
        android:backgroundTint="#673AB7"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@id/scan_qr_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button 2: Profile -->
    <Button
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:backgroundTint="#673AB7"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lottery_and_classes_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button 3: Organizer View -->
    <Button
        android:id="@+id/organizer_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer View"
        android:backgroundTint="#673AB7"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
